#include "sort.h"
#include <stdio.h>

void quick_sort(int *array, size_t size)
{
	int low_pos, high_pos, size_low, size_high, pivot;

	if (size > 0)
	{
		low_pos = 0;
		high_pos = (int)size - low_pos - 1;
		pivot = lomuto(array, low_pos, high_pos, size);
		size_low = (pivot - 1) - low_pos;
		printf("size_low = %d\n", size_low);
		if (size_low > 0)
			quick_sort(array, size_low);
		size_high = (high_pos - 1) - (pivot + 1);
		printf("size_high = %d\n", size_high);
		if (size_high > 0)
			quick_sort(array, size_high);
	}
}

int lomuto(int *array, int low_pos, int high_pos, size_t size)
	{
		int i, j, pivot;

		i = low_pos - 1;
		for (j = low_pos; j < high_pos; j++)
		{
			if (array[j] < array[high_pos])
			{
				i++;
				swap_list(array, i, j);
				print_array(array, size);
			}
		}
		pivot = i + 1;
		swap_list(array, pivot, high_pos);
		print_array(array, size);
		return(pivot);
	}

void swap_list(int *array, int pos1, int pos2)
{
	int tmp = array[pos1];
	array[pos1] = array[pos2];
	array[pos2] = tmp;
}
