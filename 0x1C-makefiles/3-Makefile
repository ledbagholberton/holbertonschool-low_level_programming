#Makefile - with rules all and variables CC, SRC

CC  = gcc
SRC = main.c holberton.c
OBJ = $(SRC:c=o)
NAME = holberton
RM = rm

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

.ONESHELL:
clean:
	$(RM) -f *~ holberton

.ONESHELL:
oclean:
	$(RM) -f $(OBJ)

.ONESHELL:
fclean:
	$(RM) -f *~ holberton
	$(RM) -f $(OBJ)

.ONESHELL:
re: oclean all

edit : $(SRC)
	$(CC) $(SRC) -c
