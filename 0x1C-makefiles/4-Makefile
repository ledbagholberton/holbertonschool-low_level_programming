#Makefile - with rules all and variables CC, SRC

CC  = gcc
SRC = main.c holberton.c
OBJ = $(SRC:c=o)
NAME = holberton
RM = rm
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(OBJ)
	$(CC) $(OBJ) $(CFLAGS) -o $(NAME)

clean:
	$(RM) -f *~ holberton

oclean:
	$(RM) -f $(OBJ)

fclean:
	$(RM) -f *~ holberton
	$(RM) -f $(OBJ)

re: oclean all

edit : $(OBJ)
	cc -c $(CFLAGS) edit $(OBJ)
