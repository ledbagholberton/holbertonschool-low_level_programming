#include "search_algos.h"
#include <stdlib.h>

/**
 *jump_search - search with jump
 *
 *@array: numbers array where is located
 *@size: size of array
 *@value: value to search
 *
 *Return: location of value in the array
 */

int jump_search(int *array, size_t size, int value)
{
	int step, prev;
	size_t a;

	prev = 0;
	step = sqrt(size);
	while (array[prev] < value)
	{
		printf("Value checked array[%d] = [%d]\n", prev, array[prev]);
		prev = prev + step;
	}
	printf("Value found between indexes [%d] and [%d]\n", prev - step, prev);
	a = prev - step;
	while ((int)a < step)
	{
		printf("Value checked array[%d] = [%d]\n", (int)a, array[a]);
		if (array[a] == value)
			return (a);
		a++;
	}
	if (a >= size)
		a = -1;
	return (a);
}
